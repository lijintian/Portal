@using Portal.Web.Admin.Core
@{
    string userName = PageUtility.GetUserName;
}
<div id="navbar" class="navbar navbar-default">
    <script type="text/javascript">
        try {
            ace.settings.check('navbar', 'fixed');
        } catch (e) { }
    </script>
    <div class="navbar-container" id="navbar-container">
        <div class="navbar-header pull-left">
            <a href="#" class="navbar-brand">
                <small>
                    <i class="fa fa-leaf"></i>
                    Portal门户系统管理平台
                </small>
            </a>
        </div>
        <div class="navbar-buttons navbar-header pull-right" role="navigation">
            <ul class="nav ace-nav">
                <!-- #section:basics/navbar.user_menu -->
                <li class="light-blue">
                    <a data-toggle="dropdown" href="#" class="dropdown-toggle">
                        <img class="nav-user-photo" src="@Url.Ck1Content("portal/Js/ACE-admin/assets/avatars/user.jpg")" alt="@userName" />
                        <span class="user-info">
                            <small>Welcome,</small>
                            @userName
                        </span>
                        <i class="ace-icon fa fa-caret-down"></i>
                    </a>
                    <ul class="user-menu dropdown-menu-right dropdown-menu dropdown-yellow dropdown-caret dropdown-close">
                        <li><a href="#" onclick="Tab$.EditPwdDailog();"><i class="ace-icon glyphicon glyphicon-cog"></i>修改密码</a></li>
                        <li class="divider"></li>
                        <li><a href="javascript:void(0)" onclick="Tab$.LogOff();"><i class="ace-icon glyphicon glyphicon-off"></i>注销</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</div>

