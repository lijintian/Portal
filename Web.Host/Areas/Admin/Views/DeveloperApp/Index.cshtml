<!-- 外部开发者应用信息管理 -->
@using Portal.Web.Admin.Core
@{
    ViewBag.Title = PageUtility.GetMenuName(ViewContext.RouteData, "外部应用列表");
    Layout = PageUtility.GetLayout;
}
@section Head{
    <script type="text/javascript" src="@Url.Content2("~/Scripts/Client/DeveloperAppList.js")"></script>
}
<div id="divmain" class="row">
    <div class="row">
        <div class="col-xs-12 dataTables_length" id="divFilter">
            <input type="text" placeholder="应用名称" name="Name" class="input-common" />&nbsp;&nbsp;
            状态：@Html.DropDownList("StateSource", null, new { @style = "width:150px", onchange = "SearchInfo();" })&nbsp;&nbsp;
            <input type="text" id="txtName" name="UserName" placeholder="所属账号" class="input-common" />&nbsp;&nbsp;
            <span class="input-icon input-icon-right">
                <input type="text" name="StartTime" placeholder="创建起始时间" style="width: 120px;" onfocus="WdatePicker({startDate: '%y-%M-%d' ,dateFmt:'yyyy-MM-dd',alwaysUseStartDate: true,isShowClear:false,readOnly:true });">
                <i class="ace-icon glyphicon glyphicon-calendar"></i>
            </span>
            至
            <span class="input-icon input-icon-right">
                <input type="text" name="EndTime" placeholder="创建结束时间" style="width: 120px;" onfocus="WdatePicker({startDate: '%y-%M-%d' ,dateFmt:'yyyy-MM-dd',alwaysUseStartDate: true,isShowClear:false,readOnly:true });">
                <i class="ace-icon glyphicon glyphicon-calendar"></i>
            </span>
            <button class="btn btn-purple" onclick="SearchInfo();">
                <i class="ace-icon glyphicon glyphicon-search"></i>查询
            </button>
        </div>
    </div>
    <div id="divcontent" class="row listContent">
        @{Html.RenderPartial("List");}
    </div>
</div>
<script type="text/javascript" language="javascript">
    // 保存各查询参数
    var SearchConfig = {
        IsPostBack: true
    };
</script>
<div id="divdetail" style="display:none;"></div>

