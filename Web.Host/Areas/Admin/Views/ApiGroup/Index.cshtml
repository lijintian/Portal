<!-- API权限分组管理 -->
@using Portal.Web.Admin.Core
@using Portal.Web.Core;
@{
    ViewBag.Title = PageUtility.GetMenuName(ViewContext.RouteData, "API权限分组管理");
    Layout = PageUtility.GetLayout;
    bool add = PageUtility.HasPermission(PermissionCodes.ApiPermissionGroup_Add);
}
@section Head{
    <script type="text/javascript" src="@Url.Content2("~/Scripts/SysManage/ApiGroupList.js")"></script>
}
<div id="divmain" class="row">
    <div class="row">
        <div class="col-xs-10 dataTables_length" id="divFilter">
            <input type="text" id="txtName" name="Name" placeholder="名称" class="input-common" />&nbsp;&nbsp;
            <input type="text" id="txtCode" name="Code" placeholder="编码" class="input-common" />&nbsp;&nbsp;
            <button class="btn btn-purple" onclick="SearchInfo();">
                <i class="ace-icon glyphicon glyphicon-search"></i>查询
            </button>&nbsp;&nbsp;
        </div>
        @if (add)
        {
            <div class="col-xs-2">
                <div class="dataTables_filter">
                    <button title="新增" class='btn btn-info' onclick="CreateDailog();">
                        <i class='ace-icon glyphicon glyphicon-plus-sign'></i>新增
                    </button>
                </div>
            </div>
            <br />
        }
    </div>
    <div id="divcontent" class="row listContent">
        @{Html.RenderPartial("List");}
    </div>
</div>
<script type="text/javascript" language="javascript">
    // 保存各查询参数
    var SearchConfig = {
        IsPostBack: true
    };
</script>

