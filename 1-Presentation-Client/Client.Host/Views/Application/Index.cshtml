<!-- 外部开发者应用信息管理 -->
@using Portal.Client.Core
@{
    ViewBag.Title = PageUtility.GetMenuName(ViewContext.RouteData, "应用列表");
    Layout = PageUtility.GetLayout;
    bool create = PageUtility.HasPermission(ClientPermissionCodes.ClientDeveloperApp_Create); //创建
}
@section Head{
    <script type="text/javascript" src="@Url.Content2("~/Scripts/Client/ApplicationList.js")"></script>
}
<div class="row-fluid">
    <div class="span12" id="divFilter">
        名称：<input type="text" id="content1" class="input-common" />&nbsp;&nbsp;
        状态：@Html.DropDownList("StateSource", null, new { @style = "width:150px", onchange = "SearchInfo();" })&nbsp;&nbsp;
        类型：@Html.DropDownList("TypeSource", null, new { @style = "width:150px", onchange = "SearchInfo();" })&nbsp;&nbsp;
        <a class="btn" onclick="SearchInfo();">
            查询
        </a>&nbsp;&nbsp;
        @if (create)
        {
            <a class="btn" onclick=" CreateDailog(); ">
                新建应用
            </a>
        }
    </div>
    <div class="clearfix">&nbsp;</div>
    <div id="divcontent">
        @{Html.RenderPartial("List");}
    </div>
</div>
<script type="text/javascript" language="javascript">
    // 保存各查询参数
    var SearchConfig = {
        IsPostBack: true
    };
</script>

